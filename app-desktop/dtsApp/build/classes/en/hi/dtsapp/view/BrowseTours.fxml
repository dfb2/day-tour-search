<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="1000.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="en.hi.dtsapp.view.BrowseToursController">
    <stylesheets>
        <URL value="@css/browsetours.css" />
    </stylesheets>
   <children>
      <ScrollPane layoutY="52.0" prefHeight="550.0" prefWidth="1000.0">
         <content>
            <ListView fx:id="tourListView" prefWidth="990.0" />
         </content>
      </ScrollPane>
      <ToolBar prefHeight="50.0" prefWidth="1000.0">
        <items>
            <TextField fx:id="searchField" prefHeight="40.0" prefWidth="200.0" promptText="Search..." />
            <DatePicker fx:id="dateFromField" editable="false" prefHeight="40.0" prefWidth="150.0" promptText="From" />
            <DatePicker fx:id="dateToField" editable="false" prefHeight="40.0" prefWidth="150.0" promptText="To" />
            <SplitMenuButton fx:id="PassengerSplitMenu" mnemonicParsing="false" prefHeight="40.0" prefWidth="110.0" text="1 Passenger">
              <items>
                <MenuItem fx:id="passengerMenuItem1" mnemonicParsing="false" onAction="#storeCurrentPassengers" text="1" />
                <MenuItem fx:id="passengerMenuItem2" mnemonicParsing="false" onAction="#storeCurrentPassengers" text="2" />
                  <MenuItem fx:id="passengerMenuItem3" mnemonicParsing="false" onAction="#storeCurrentPassengers" text="3" />
                  <MenuItem fx:id="passengerMenuItem4" mnemonicParsing="false" onAction="#storeCurrentPassengers" text="4" />
                  <MenuItem fx:id="passengerMenuItem5" mnemonicParsing="false" onAction="#storeCurrentPassengers" text="5" />
                  <MenuItem fx:id="passengerMenuItem6" mnemonicParsing="false" onAction="#storeCurrentPassengers" text="6" />
                  <MenuItem fx:id="passengerMenuItem7" mnemonicParsing="false" onAction="#storeCurrentPassengers" text="7" />
                  <MenuItem fx:id="passengerMenuItem8" mnemonicParsing="false" onAction="#storeCurrentPassengers" text="8" />
              </items>
            </SplitMenuButton>
            <Button mnemonicParsing="false" onAction="#searchForTours" prefHeight="40.0" prefWidth="200.0" text="Search" />
          <Button mnemonicParsing="false" onAction="#browseDistinctTours" prefHeight="40.0" prefWidth="100.0" text="Browse Distinct" />
            <Button mnemonicParsing="false" onAction="#clearSearchParameters" prefHeight="40.0" prefWidth="50.0" text="Clear" />
        </items>
      </ToolBar>
   </children>
</AnchorPane>
